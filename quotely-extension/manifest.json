{
  "manifest_version": 3,
  "name": "Quotely â€” Save Quote",
  "version": "0.1.0",
  "description": "Highlight text anywhere and save to your Quotely API.",
  "permissions": [ "contextMenus", "storage", "activeTab" ],
  "host_permissions": [
    "http://localhost:5265/*",
    "https://your-production-api.example.com/*"
  ],
  "action": {
    "default_title": "Quotely",
    "default_popup": "popup.html"
  },
  "options_page": "options.html",
  "background": {
    "service_worker": "service_worker.js"
  },
  "icons": {
    "16": "icons/16.png",
    "48": "icons/48.png",
    "128": "icons/128.png"
  }
}
